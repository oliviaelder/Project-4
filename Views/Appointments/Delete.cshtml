@model Appt_Scheduler.Models.Appointment

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this appointment?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.ApptDate)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.ApptDate)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.ApptTime)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.ApptTime)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.ReasonForVisit)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.ReasonForVisit)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Status)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Status)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Doctor)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Doctor.DoctorFullName)</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="AppointmentId" />
        <input type="hidden" asp-for="PatientId" />
        <input type="hidden" name="returnUrl" value="@ViewBag.ReturnUrl" />

        <input type="submit" value="Delete" class="btn btn-danger" />

        <div class="mt-4">
            <br />
            <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Return to Main Menu</a>
        </div>
    </form>
</div>
