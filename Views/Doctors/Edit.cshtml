@model Appt_Scheduler.Models.Doctor

@{
    ViewData["Title"] = "Edit Doctor";
}

<h4>Edit Doctor</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="DoctorId" />

            <div class="form-group">
                <br />
                <strong><label asp-for="DoctorFullName" class="control-label">Doctor Full Name</label></strong>
                <input asp-for="DoctorFullName" class="form-control" />
                <span asp-validation-for="DoctorFullName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <br />
                <strong><label asp-for="DEANumber" class="control-label">DEA Number</label></strong>
                <input asp-for="DEANumber" class="form-control" />
                <span asp-validation-for="DEANumber" class="text-danger"></span>
            </div>

            <div class="form-group">
                <br />
                <strong><label asp-for="PhoneNumber" class="control-label"></label></strong>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>

            <div class="form-group">
                <br />
                <strong><label asp-for="Email" class="control-label"></label></strong>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <br />
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="mt-4">
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
